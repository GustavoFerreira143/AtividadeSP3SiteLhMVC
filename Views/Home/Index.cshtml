@{
    ViewData["Title"] = "LH Pet";
}

<div class="container">

    <h1> >>> Sistema de Controle Interno - LH Pet <<< </h1>

            <table class="table table-hover table-sm table-bordered table-sm caption-top">
                <caption>Lista de clientes</caption>
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nome</th>
                        <th scope="col">CPF</th>
                        <th scope="col">E-mail</th>
                        <th scope="col">Paciente (pet)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var i in @ViewBag.usuarios){
                    <tr>
                        <td >@i.Id</td>
                        <td>@i.Nome</td>
                        <td>@i.CPf</td>
                        <td>@i.Email</td>
                        <td>@i.Paciente</td>
                    </tr>}
                </tbody>
            </table>


            <table class="table table-hover table-sm table-bordered table-sm caption-top">
                <caption>Lista de fornecedores</caption>
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nome</th>
                        <th scope="col">CNPJ</th>
                        <th scope="col">E-mail</th>
                    </tr>
                </thead>
                <tbody>
              @foreach(var i in @ViewBag.fornecedor){
                    <tr>
                        <td>@i.Id</td>
                        <td>@i.Nome</td>
                        <td>@i.Cnpj</td>
                        <td>@i.Email</td>
                    </tr>}
                </tbody>
            </table>

</div>
